<div class="row">
  <div class="col-md-4">
    <div class="well">
    <%= simple_form_for(@business) do |f| %>
      <% if @business.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@business.errors.count, "error") %> prohibited this business from being saved:</h2>

          <ul>
          <% @business.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :contact_name %>
        <%= f.input :about %>
        <%= f.input :addr1 %>
        <%= f.input :addr2 %>
        <%= f.input :city %>
        <%= f.input :state, collection: us_states_and_ca_provinces %>
        <%= f.input :postal_code %>
        <%= f.input :country %>
        <%= f.input :phone %>
      </div>

      <div class="form-actions">
        <%= button_tag :submit, class: "btn btn-primary" do %>
          <i class="fa fa-save"></i> Save
        <% end %>
        <%= link_to @business, class: "btn btn-link" do %>
          <i class="fa fa-times"></i> Cancel
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="col-md-8"></div>
</div>