<h3>My Business Profile</h3>
<div class="well">
  <p>
    <strong>Name:</strong>
    <%= @business.name %>
  </p>
  <p>
    <strong>About:</strong>
    <%= @business.about %>
  </p>
  <p>
    <strong>Contact Name:</strong>
    <%= @business.contact_name %>
  </p>
  <address>
    <strong>Address</strong><br>
    <%= @business.addr1 %><br>
    <%= @business.addr2 %><% unless @business.addr2.blank? %><br><% end %>
    <%= @business.city %>, <%= @business.state %> <%= @business.postal_code %><br>
    <%= @business.country %>
  </address>
  <p>
    <strong>Phone:</strong>
    <%= @business.phone %>
  </p>
  <%= link_to edit_business_path(@business), class: "btn btn-default" do %>
    <i class="fa fa-pencil-square-o"></i> Edit
  <% end %>
</div>