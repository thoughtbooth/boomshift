<div class="row">
  <div class="col-md-4">
    <div class="well">
      <%= simple_form_for(@client, wrapper: :vertical_input_group) do |f| %>
        <% if @client.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

            <ul>
            <% @client.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-inputs">
          <%= f.input :fname, label: "First name" %>
          <%= f.input :lname, label: "Last name" %>
          <%= f.input :email, wrapper: :vertical_input_group, hint: "Enter a valid email address if you want to send bills to your client via email." do %>
            <%= f.input_field :email, placeholder: 'name@example.com', class: "form-control" %>
            <span class="input-group-addon">
              <i class="fa fa-info-circle" data-toggle="tooltip" data-placement="left" title="If you want this person to get email from you, including bills, you need to enter a valid email address for them here. If you leave this blank, you will need to print out bills the old-fashioned way."></i>
            </span>
          <% end %>
          <%= f.input :addr1, label: "Address 1" %>
          <%= f.input :addr2, label: "Address 2" %>
          <%= f.input :city %>
          <%= f.input :state, collection: us_states_and_ca_provinces %>
          <%= f.input :postal_code %>
          <%= f.input :country %>
          <%= f.input :phone %>
        </div>
      
        <div class="form-actions">
          <%= button_tag :submit, class: "btn btn-primary", "data-disable-with" => "Saving..." do %>
            <i class="fa fa-save"></i> Save
          <% end %>
          <%= link_to @client, class: "btn btn-link" do %>
            <i class="fa fa-times"></i> Cancel
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-8"></div>
</div>