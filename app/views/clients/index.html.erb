<h3>Client Address Book</h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Postal Code</th>
      <th>Country</th>
      <th>Phone</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td>
          <%= link_to client, class: "btn btn-link btn-xs", "data-toggle" => "tooltip", "data-placement" => "top", title: "View Client" do %>
            <i class="fa fa-search"></i> <%= client.fname %> <%= client.lname %>
          <% end %>
        </td>
        <td><%= client.email %></td>
        <td><%= client.addr1 %></td>
        <td><%= client.addr2 %></td>
        <td><%= client.city %></td>
        <td><%= client.state %></td>
        <td><%= client.postal_code %></td>
        <td><%= client.country %></td>
        <td><%= client.phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_client_path, class: "btn btn-default", "data-toggle" => "tooltip", "data-placement" => "top", title: "New Client" do %>
  <i class="fa fa-plus"></i> New Client
<% end %>