<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">My Payment Terms</h3>
      </div>
      <div class="panel-body">
        <p>
          <strong>Days To Pay:</strong>
          <%= @payment_term.days_to_pay %>
        </p>
      </div>
      <div class="panel-footer">
        <%= link_to edit_payment_term_path(@payment_term), class: "btn btn-default" do %>
          <i class="fa fa-pencil-square-o"></i> Edit
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-8"></div>
</div>
