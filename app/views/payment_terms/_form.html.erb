<div class="row">
  <div class="col-md-4">
    <div class="well">
      <%= simple_form_for(@payment_term) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :days_to_pay %>
          <%= f.hidden_field :business_id, value: current_user.business.id %>
        </div>

        <div class="form-actions">
          <%= button_tag :submit, class: "btn btn-primary", "data-disable-with" => "Saving..." do %>
            <i class="fa fa-save"></i> Save
          <% end %>
          <%= link_to :back, class: "btn btn-link" do %>
            <i class="fa fa-times"></i> Cancel
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="well">
      <h5><i class="fa fa-lightbulb-o fa-lg"></i> <strong>Quick Tip:</strong></h5> This is the number of days your clients have to pay each bill before it is considered late.
    </div>
  </div>
  <div class="col-md-8"></div>
</div>