<h1>All Business Profiles</h1>
<h4>TODO: Only administrators should have access to this page</h4>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>About</th>
      <th>Addr1</th>
      <th>Addr2</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Phone</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_profiles.each do |business_profile| %>
      <tr>
        <td><%= business_profile.name %></td>
        <td><%= business_profile.about %></td>
        <td><%= business_profile.addr1 %></td>
        <td><%= business_profile.addr2 %></td>
        <td><%= business_profile.city %></td>
        <td><%= business_profile.state %></td>
        <td><%= business_profile.country %></td>
        <td><%= business_profile.phone %></td>
        <td><%= business_profile.user.try(:email) %></td>
        <% if business_profile.user == current_user %>
          <td><%= link_to 'Show', business_profile %></td>  
          <td><%= link_to 'Edit', edit_business_profile_path(business_profile) %></td>
          <td><%= link_to 'Delete', business_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Business Profile', new_business_profile_path %>
<% end %>
