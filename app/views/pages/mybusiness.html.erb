<p id="notice"><%= notice %></p>

<h1>My Business</h1>
<hr>

<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <% @biz = current_user.business %>
        <% if @biz %>
          <h3 class="text-center"><%= link_to 'My Business Profile', business_path(@biz) %></h3>
        <% else %>
          <h3 class="text-center"><%= link_to 'Create My Business Profile', new_business_path %></h3>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if @biz %>
          <h3 class="text-center"><%= link_to 'Services I Offer', services_path %></h3>
        <% else %>
          <h3 class="text-center">Services I offer</h3>
          <p class="text-center">(Create your business profile first!)</p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if @biz %>
          <% @terms = current_user.business.payment_term %>
          <% if @terms%>
            <h3 class="text-center"><%= link_to 'My Payment Terms', payment_term_path(current_user.business.payment_term) %></h3>
          <% else %>
            <h3 class="text-center"><%= link_to 'Create My Payment Terms', new_payment_term_path %></h3>
          <% end %>
        <% else %>
          <h3 class="text-center">My Payment Terms</h3>
          <p class="text-center">(Create your business profile first!)</p>
        <% end %>
      </div>
    </div>
  </div>
</div>