<h1>My Business</h1>
<div class="panel panel-default">
  <div class="panel-body">
    <% @biz = current_user.business %>
    <% if @biz %>
      <% @bizname = @biz.name %>
      <p><%= link_to 'My Business Profile', business_path(@biz) %> (<%= @bizname %>)</p>
    <% else %>
      <p><%= link_to 'Create My Business Profile', new_business_path %></p>
    <% end %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <% if @biz %>
      <p><%= link_to 'Services I Offer', services_path %></p>
    <% else %>
      <p>Services I offer (Create your business profile first!)</p>
    <% end %>
    
  </div>
</div>