<h1>Bills</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Recipient</th>
      <th>Identifier</th>
      <th>Description</th>
      <th>Status</th>
      <th>Issue Date</th>
      <th>Total Amount</th>
      <th>Period Start</th>
      <th>Period End</th>
      <th>Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.recipient.full_name %></td>
        <td><%= bill.identifier %></td>
        <td><%= bill.description %></td>
        <td><%= bill.status %></td>
        <td><%= l bill.issue_date, format: :default_date if bill.issue_date %></td>
        <td><%= number_to_currency bill.total_amount %></td>
        <td><%= l bill.period_start, format: :default_date  %></td>
        <td><%= l bill.period_end, format: :default_date %></td>
        <td><%= l bill.due_date, format: :default_date %></td>
        <td>
          <%= link_to bill, class: "btn btn-default btn-sm", "data-toggle" => "tooltip", "data-placement" => "top", title: "Preview" do %>
            <i class="glyphicon glyphicon-search"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_bill_path(bill), class: "btn btn-default btn-sm", "data-toggle" => "tooltip", "data-placement" => "top", title: "Edit" do %>
            <i class="glyphicon glyphicon-edit"></i>
          <% end %>
          <%= link_to bill_pdf_path(bill), class: "btn btn-default btn-sm" do %>
            <i class="glyphicon glyphicon-print"></i>
          <% end %>
        </td>
        <td>
          <%= link_to bill, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm", "data-toggle" => "tooltip", "data-placement" => "top", title: "Delete" do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_bill_path, class: 'btn btn-default' do %>
  <i class="glyphicon glyphicon-plus"></i> New Bill
<% end %>