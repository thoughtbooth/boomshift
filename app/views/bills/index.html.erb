<h3>Bills</h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Recipient</th>
      <th>Identifier</th>
      <th>Status</th>
      <th>Issue Date</th>
      <th>Due Date</th>
      <th>Total Amount</th>
      <th>Job</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.recipient.full_name %></td>
        <td><%= bill.identifier %></td>
        <td><%= bill.status %></td>
        <td><%= l bill.issue_date, format: :default_date if bill.issue_date %></td>
        <td><%= l bill.due_date, format: :default_date %></td>
        <td><%= number_to_currency bill.total_amount %></td>
        <td><%= bill.line_items.first.job.description %></td>
        <td>
          <%= link_to bill, class: "btn btn-default btn-sm", "data-toggle" => "tooltip", "data-placement" => "top", title: "View" do %>
            <i class="fa fa-search"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_bill_path(bill), class: "btn btn-default btn-sm", "data-toggle" => "tooltip", "data-placement" => "top", title: "Edit" do %>
            <i class="fa fa-pencil-square-o"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_bill_path, class: 'btn btn-default' do %>
  <i class="fa fa-plus"></i> New Bill
<% end %>