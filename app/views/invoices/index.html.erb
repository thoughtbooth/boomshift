<h1>Invoices</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Recipient</th>
      <th>Identifier</th>
      <th>Description</th>
      <th>Status</th>
      <th>Issue Date</th>
      <th>Total Amount</th>
      <th>Period Start</th>
      <th>Period End</th>
      <th>Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.recipient.full_name %></td>
        <td><%= invoice.identifier %></td>
        <td><%= invoice.description %></td>
        <td><%= invoice.status %></td>
        <td><%= l invoice.issue_date, format: :default_date if invoice.issue_date %></td>
        <td><%= number_to_currency invoice.total_amount %></td>
        <td><%= l invoice.period_start, format: :default_date  %></td>
        <td><%= l invoice.period_end, format: :default_date %></td>
        <td><%= l invoice.due_date, format: :default_date %></td>
        <td>
          <%= link_to invoice, class: "btn btn-default btn-sm", "data-toggle" => "tooltip", "data-placement" => "top", title: "Preview" do %>
            <i class="glyphicon glyphicon-search"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_invoice_path(invoice), class: "btn btn-default btn-sm", "data-toggle" => "tooltip", "data-placement" => "top", title: "Edit" do %>
            <i class="glyphicon glyphicon-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to invoice, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm", "data-toggle" => "tooltip", "data-placement" => "top", title: "Delete" do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_invoice_path, class: 'btn btn-default' do %>
  <i class="glyphicon glyphicon-plus"></i> New Invoice
<% end %>