<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Type</th>
      <th>Issue Date</th>
      <th>Currency</th>
      <th>Total Amount</th>
      <th>Tax Amount</th>
      <th>Status</th>
      <th>Identifier</th>
      <th>Description</th>
      <th>Period Start</th>
      <th>Period End</th>
      <th>UUID</th>
      <th>Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.sender_id %></td>
        <td><%= invoice.recipient_id %></td>
        <td><%= invoice.type %></td>
        <td><%= invoice.issue_date %></td>
        <td><%= invoice.currency %></td>
        <td><%= invoice.total_amount %></td>
        <td><%= invoice.tax_amount %></td>
        <td><%= invoice.status %></td>
        <td><%= invoice.identifier %></td>
        <td><%= invoice.description %></td>
        <td><%= invoice.period_start %></td>
        <td><%= invoice.period_end %></td>
        <td><%= invoice.uuid %></td>
        <td><%= invoice.due_date %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

