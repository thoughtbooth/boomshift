<% @job = Job.new if @job.nil? %>

<!--TODO: change label_method: :preferences below to instead display the service name. May have to set a variable.-->

<%= simple_form_for @job do |f| %>
<%= f.association :enrollment, label_method: :preferences, value_method: :id, prompt: 'Choose an enrolled service' %>
  <%= f.input :job_date, as: :datetime %>
  <%= f.association :job_status, label_method: :status, value_method: :id, default: JobStatus.first %>
  <%= f.button :submit %>
<% end %>


