<div class="row">
  <div class="col-md-5 col-md-offset-4 sortable">
    <% if @jobs.any? %>
      <%= render @jobs %>
    <% else %>
      <p>No jobs found. <%= link_to "Create a new job", new_job_path %></p>
      <!-- Button trigger modal to add new jobs -->
      <button type="button" class="btn btn-default" data-toggle="modal" data-target="#AddJobModal">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New Job
      </button>    
    <% end %>
  </div>
</div>

<!-- Modal for Adding New Jobs -->
<div class="modal fade" id="AddJobModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New Job</h4>
      </div>
      <div class="modal-body">
        <%= render 'form' %>
        <%= render 'new_job' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>