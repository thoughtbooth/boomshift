<h3>Edit <%= resource_name.to_s.humanize %></h3>

<div class="row">
  <div class="col-md-4">
    <div class="well">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-inputs">
          <%= f.input :f_name, label: "First name" %>
          <%= f.input :l_name, label: "Last name" %>
          <%= f.input :email, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <%= f.input :password, autocomplete: "off", label: "New password" %>
          <%= f.input :password_confirmation, autocomplete: "off", label: "Repeat new password" %>
          <%= f.input :current_password, autocomplete: "off", label: "Current password (to confirm)" %>

        </div>

        <div class="form-actions">
          <%= button_tag :submit, class: "btn btn-primary" do %>
            <i class="fa fa-save"></i> Save
          <% end %>
          <%= link_to :back, class: "btn btn-link" do %>
            <i class="fa fa-times"></i> Cancel
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-8"></div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="well">
      <p>
        Unhappy?
        <%= button_to registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" do %>
          <i class="fa fa-trash"></i> Delete My Account
        <% end %>
      </p>
    </div>
  </div>
  <div class="col-md-8"></div>
</div>

<%= link_to "Back", :back %>
